<style>
  #{{ section.id }} {
    font-size: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: {{ section.settings.section_min_height }}vh;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
    {% if section.settings.background_image %}
      background: url("{{ section.settings.background_image | image_url }}") no-repeat center center;
      background-size: cover;
    {% endif %}
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-uv-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #{{ section.id }} .c-uv-video {
    width: {{ section.settings.width }}%;
    object-fit: {{ section.settings.video_fit }};
    min-height: {{ section.settings.min_height }}vh;
    background-color: {{ section.settings.video_bg_color }};
  }

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
    #{{ section.id }} .c-uv-video {
      min-height: {{ section.settings.min_height_mobile }}vh;
    }
  }
</style>


{% liquid
  assign vAutoplay = section.settings.autoplay
  assign vLoop = section.settings.loop
  assign vMuted = section.settings.muted
  assign vControls = section.settings.controls
  assign vPoster = section.settings.poster_image | image_url
%}


<section id="{{ section.id }}" class="c-section">
  <div class="{{ section.settings.section_container }}">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2>{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-uv-wrapper">
      {{ section.settings.video | media_tag: autoplay: vAutoplay, loop: vLoop, muted: vMuted, controls: vControls, class: 'c-uv-video', poster: vPoster }}
    </div>
  </div>
</section>


