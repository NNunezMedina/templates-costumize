<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h1,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-hm-grid {
    grid-template-columns: {{ section.settings.grid_template_columns }};
    gap: 3em;
    display: grid;
  }

  #{{ section.id }} .c-hm-grid-left {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    gap: 1em;
    padding: {{ section.settings.grid_left_padding }};
  }

  #{{ section.id }} .c-hm-grid-left > *:not(.c-section-top-subheading) {
    width: 100%;
  }

  #{{ section.id }} .c-hm-subheading {
    font-size: 1.3em;
    line-height: 1.25;
  }

  #{{ section.id }} .c-hm-form {
    max-width: 500px;
    margin-right: auto;
  }

  #{{ section.id }} .c-hm-buttons-div {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1em;
  }

  #{{ section.id }} .c-hm-buttons-div:empty {
    display: none;
  }

  #{{ section.id }} .c-hm-grid-right {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 1em;
    position: relative;
    {% if section.settings.marquee_style == "horizontal" %}flex-direction: column;{% endif %}
    background-color: {{ section.settings.grid_right_bg_color }};
  }

  #{{ section.id }} .c-hm-overlay {
    display: block !important;
    position: absolute;
    top: 0rem;
    left: 0rem;
    width: 50%;
    height: 100%;
    z-index: 1;
    background: linear-gradient(270deg, rgba(0, 0, 0, 0.00) 0%, {{ section.settings.grid_right_bg_color }} 100%);
  }

  #{{ section.id }} .c-hm-grid-right > div:nth-child(2) {
    padding-top: 5em;
    {% if section.settings.marquee_style == "horizontal" %}
      padding-top: 0em;
      padding-left: 5em;
    {% endif %}
  }

  #{{ section.id }} .c-hm-wrapper {
    display: flex;
    flex-direction: column;
    {% if section.settings.marquee_style == "horizontal" %}flex-direction: row;{% endif %}
    max-height: calc(100vh - 50px);
    overflow: hidden;
    position: relative;
    user-select: none;
    --gap: {{ section.settings.image_gap }}em;
    gap: var(--gap);
    {% if section.settings.marquee_style == "horizontal" %}
      {% if section.settings.direction == "100%" %}justify-content: center;{% endif %}
    {% else %}
      {% if section.settings.direction == "100%" %}justify-content: flex-end;{% endif %}
    {% endif %}
  }

  #{{ section.id }} .c-hm-marquee-content {
    flex-shrink: 0;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    {% if section.settings.marquee_style == "horizontal" %}flex-direction: row;{% endif %}
    min-width: 100%;
    gap: var(--gap);
    animation: {{ section.id }}-scroll {{ section.settings.marquee_speed }}s linear infinite;
  }

  #{{ section.id }} .c-hm-card {
    display: flex;
    position: relative;
    width: 100%;
    {% if section.settings.marquee_style == "horizontal" %}width: auto;{% endif %}
  }

  #{{ section.id }} .c-hm-image {
    border-radius: 1em;
    width: auto;
    object-fit: cover;
    {% if section.settings.marquee_style == "horizontal" %}max-height: 40vh;{% endif %}
  }


  {% if section.settings.marquee_style == "horizontal" %}
    @keyframes {{ section.id }}-scroll {
      from { transform: translateX(0); }
      to { transform: translateX(calc({{ section.settings.direction }} - var(--gap))); }
    }
  {% else %}
    @keyframes {{ section.id }}-scroll {
      from { transform: translateY(0); }
      to { transform: translateY(calc({{ section.settings.direction }} - var(--gap))); }
    }
  {% endif %}

  {% if section.settings.toggle_pause_on_hover %}
    #{{ section.id }} .c-hm-marquee-content {
      animation-play-state: running;
    }
    #{{ section.id }} .c-hm-wrapper:hover .c-hm-marquee-content {
      animation-play-state: paused;
    }
  {% endif %}

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
    #{{ section.id }} .c-hm-grid {
      grid-template-columns: 1fr;
      gap: 1em;
    }

    #{{ section.id }} .c-hm-grid-left {
      padding: {{ section.settings.grid_left_padding_mobile }};
    }

    #{{ section.id }} .c-hm-wrapper {
      --gap: {{ section.settings.image_gap_mobile }}em;
      max-height: 60vh;
    }

    #{{ section.id }} .c-hm-overlay {
      top: 0rem;
      left: 0rem;
      width: 100%;
      height: 50%;
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.00) 0%, {{ section.settings.grid_right_bg_color }} 100%);
    }

    #{{ section.id }} .c-hm-image {
      {% if section.settings.marquee_style == "horizontal" %}max-height: 200px;{% endif %}
    }
  }

  @media (max-width: {{ settings.c_breakpoint4 }}px) {
    #{{ section.id }} .c-hm-buttons-div {
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      gap: 0.5em;
    }
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="{% if section.settings.full_width == false %}page-width{% endif %}">
    <div class="c-hm-grid">
      <div class="c-hm-grid-left">
        {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
        {%- if section.settings.section_top_heading != empty -%}<h1>{{ section.settings.section_top_heading }}</h1>{%- endif -%}
        {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80 c-hm-subheading">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
        <div class="c-hm-buttons-div">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'Button' -%}
                <a class="c-button {{ block.settings.button_style }}"
                href="{{ block.settings.button_url }}" {{ block.shopify_attributes }}
                >{{ block.settings.button_text }}</a>
            {%- endcase -%}
          {%- endfor -%}
        </div>
        {% if section.settings.html_embed != empty %}<div class="c-hm-form">{{ section.settings.html_embed }}</div>{% endif %}
      </div>
      <div class="c-hm-grid-right">
        {% if section.settings.use_overlay == true %}<div class="c-hm-overlay"></div>{% endif %}
        {% for i in (1..2) %}
          {% if forloop.index == 2 %}
            {% assign myOffset = 5 %}
            {% assign myLimit = 5 %}
          {% else %}
            {% assign myOffset = 0 %}
            {% assign myLimit = 5 %}
          {% endif %}
          <div class="c-hm-wrapper">
            {% for i in (1..3) %}
              <div class="c-hm-marquee-content" {% if forloop.index == 2 %}aria-hidden="true"{% endif %}>
                {% for block in section.blocks limit: myLimit offset: myOffset %}
                  {% case block.type %}
                    {% when 'Image' %}
                      <div class="c-hm-card" {{ block.shopify_attributes }}>
                        {% if block.settings.block_image %}
                          {{ block.settings.block_image | image_url: width: 1000 | image_tag: loading: 'eager', height: 'auto', class: 'c-hm-image' }}
                        {% endif %}
                      </div>
                  {% endcase %}
                {% endfor %}
              </div>
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>


