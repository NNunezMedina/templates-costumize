      grid-template-columns: 1fr 1fr;
    }
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="c-h-wrapper">
    <div class="page-width">
      <div class="c-h-inner">
        <div class="c-h-mobile-nav">
          <span class="c-h-mobile-hamburger" data-open-navdrawer>{% render 'c-icon-menu' %}</span>
          <div id="c-h-drawer-wrapper" open="false">
            <div id="c-h-drawer">
              <div class="c-h-drawer-top">
                <{% if uselogoLink == true %}a href="/"{% else %}div{% endif %} class="c-h-drawer-logo-link">
                  {{ settings.logo | image_url: width: 250 | image_tag: loading: 'eager', height: 'auto', class: 'c-h-logo' }}
                </{% if uselogoLink == true %}a{% else %}div{% endif %}>
                <span id="c-h-close" data-close-navdrawer>{% render 'icon-close' %}</span>
              </div>
              <div id="c-h-navigation">
                <div class="c-h-lvl1-div">
                  {% for link in headerMenu.links %}
                    {% assign mobileMenuLvl1 = forloop.first %}
                    {% if link.links != blank %}
                      <details class="c-h-lvl2-details" {% if mobileMenuLvl1 %}open{% endif %}>
                        <summary class="c-h-link-div">
                          <div class="c-h-link c-h-lvl2">
                            <span>{{ link.title }}</span>
                            <div class="c-h-link-right">
                              <a href="{{ link.url }}" class="c-h-menu-button">See All</a>
                              <span class="c-h-lvl2-icon">{% render 'c-icon-chevron2' %}</span>
                            </div>
                          </div>
                        </summary>
                        <div class="c-h-lvl2-page">
                          {% for childlink in link.links %}
                            {% assign mobileMenuLvl1-x = forloop.index %}
                            {% if childlink.links != blank %}
                              {% for grandchildlink in childlink.links %}
                                <div class="c-h-link-div">
                                  <a href="{{ grandchildlink.url }}" class="c-h-link">{{ grandchildlink.title }}</a>
                                </div>
                              {% endfor %}
                            {% else %}
                              <a href="{{ childlink.url }}" class="c-h-nav-lvl2-item">
                                {% if childlink.type == 'collection_link' %}
                                  {% assign c_nav_collection_title = childlink.title | downcase | handleize | strip %}
                                  {% assign c_nav_collection = collections[c_nav_collection_title] %}
                                  <div class="c-h-nav-lvl2-image-div">
                                    {{ c_nav_collection.featured_image | image_url: width: 250 | image_tag: loading: 'lazy', height: 'auto', class: '' }}
                                  </div>
                                {% elsif childlink.type == 'product_link' %}
                                  {% assign c_nav_product_title = childlink.title | downcase | handleize | strip %}
                                  {% assign c_nav_product = all_products[c_nav_product_title] %}
                                  <div class="c-h-nav-lvl2-image-div">
                                    {{ c_nav_product.featured_image | image_url: width: 250 | image_tag: loading: 'lazy', height: 'auto', class: '' }}
                                  </div>
                                {% endif %}
                                <div class="c-h-nav-lvl2-title">{{ childlink.title }}</div>
                                {% if mobileMenuLvl1 %}
                                  <div class="c-h-nav-lvl2-benefits">
                                    {% if mobileMenuLvl1-x == 1 %}
                                      {% for block in section.blocks %}
                                        {% case block.type %}
                                          {% when 'ItemOne' %}
