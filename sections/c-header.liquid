    #{{ section.id }} .c-h-nav-lvl2-item {
      width: 13em;
    }
  }

  @media (max-width: {{ settings.c_breakpoint1 }}px) {
  }
  
  @media (max-width: {{ settings.c_breakpoint2 }}px) {
