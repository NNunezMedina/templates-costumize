<style>
  :root {
    --header-border-top: rgba(0, 0, 0, 0.1);
    --header-border: rgba(0, 0, 0, 0.6);
    --header-border2: rgba(0, 0, 0, 0.2);
    --header-white: rgba(0, 0, 0, 1);
    --header-bg-black: rgba(255, 255, 255, 1);
    --header-bg-link-hover: rgba(255,255,255,0.15);
    --header-drawer-bg: rgba(0,0,0,0.5);
    --header-button: #333;
    --header-link: rgba(0, 0, 0, 0.8);
  }

  .shopify-section-group-header-group.c-h-header {
    position: sticky;
    top: 0em;
  }

  #{{ section.id }} {
    display: flex;
    flex-direction: column;
    transition: 0.2s ease;
    font-size: 16px;
    border-bottom: 1px solid var(--header-border-top);
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div:not(.cart-count-bubble, .c-h-link, .c-h-link-right),
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-h-wrapper {
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-h-inner {
    gap: 1em;
    display: grid;
    grid-template-columns: 0.4fr 2fr 0.4fr;
  }

  #{{ section.id }} .c-h-inner > * {
    display: flex;
    align-items: center;
  }

  /* left */
  /*#region*/
    #{{ section.id }} .c-h-left {
      justify-content: flex-start;
      gap: 1.5em;
    }

    #{{ section.id }} .c-h-logo-link {
      display: flex;
      padding-top: {{ section.settings.padding_top }}em;
      padding-bottom: {{ section.settings.padding_bottom }}em;
    }

    #{{ section.id }} .c-h-logo {
      width: {{ settings.logo_width }}px;
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-h-logo:hover {
      filter: none;
    }
  /*#endregion*/

  /* mobile nav */
  /*#region*/
    #{{ section.id }} .c-h-mobile-nav {
      display: none;
    }

    #{{ section.id }} .c-h-mobile-nav .c-h-mobile-hamburger {
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
    }

    #{{ section.id }} .c-h-mobile-nav .c-h-mobile-hamburger svg {
      color: var(--header-link);
      width: 1.3em;
      height: 1.3em;
    }

    #{{ section.id }} .c-h-mobile-nav .c-h-mobile-hamburger {
      position: relative;
    }

    #{{ section.id }} #c-h-drawer-wrapper {
      position: fixed;
      left: 0em;
      top: 0em;
      width: 100%;
      min-height: 100vh;
      display: none;
      grid-template-columns: 1fr 0fr;
      gap: 0em;
      z-index: 4;
      background-color: var(--header-drawer-bg);
      max-height: 100vh;
      overflow: auto;
    }

    #{{ section.id }} #c-h-drawer {
      background-color: {{ section.settings.mobile_drawer_bg_color }};
      padding-bottom: 3.5em;
      transform: translateX(-83.333333vw);
    }

    #{{ section.id }} .c-h-drawer-top {
      width: 100%;
      padding: 1em 1.5em 1em 1.5em;
      display: flex;
      justify-content: space-between;
      color: var(--header-white);
      border-bottom: 1px solid var(--header-border-top);
    }

    #{{ section.id }} .c-h-drawer-logo-link {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #{{ section.id }} #c-h-close {
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
    }

    #{{ section.id }} .c-h-drawer-top svg {
      width: 1em;
    }

    #{{ section.id }} #c-h-navigation {
      padding: 0em 0em 1em 0em;
    }

    #{{ section.id }} .c-h-lvl1-div {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      position: relative;
    }

    #{{ section.id }} .c-h-lvl1-div > *:first-child .c-h-link,
    #{{ section.id }} .c-h-lvl1-div > *:first-child .c-h-link .c-h-menu-button {
      color: var(--header-white);
    }

    #{{ section.id }} .c-h-lvl1-div > *:first-child .c-h-link span {
      position: relative;
    }

    #{{ section.id }} .c-h-link-div {
      display: flex;
      width: 100%;
    }

    #{{ section.id }} .c-h-link {
      padding: 1em 1.5em 1em 1.5em;
      width: 100%;
      font-weight: 700;
      color: var(--header-border);
      text-transform: uppercase;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 0.75em;
      border-bottom: 1px solid var(--header-border-top);
    }

    #{{ section.id }} .c-h-link:hover {
      color: var(--header-white);
    }

    #{{ section.id }} .c-h-link.c-h-lvl2 {
      justify-content: space-between;
    }

    #{{ section.id }} .c-h-link-right {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      gap: 1em;
    }

    #{{ section.id }} .c-h-link-right .c-h-menu-button {
      font-size: 0.875em;
      color: var(--header-border);
      text-decoration: underline;
    }

    #{{ section.id }} .c-h-link-right .c-h-menu-button:hover {
      color: var(--header-white);
    }

    #{{ section.id }} .c-h-lvl2-details {
      width: 100%;
    }

    #{{ section.id }} .c-h-lvl2-details[open] > summary .c-h-lvl2-icon svg {
      transform: rotate(90deg);
    }

    /* #{{ section.id }} .c-h-lvl2-details[open] > summary > .c-h-link {
      border-bottom: 1px solid var(--header-drawer-bg);
    } */

    #{{ section.id }} .c-h-lvl2-details[open] .c-h-lvl2-page {
      border-bottom: 1px solid var(--header-drawer-bg);
    }

    #{{ section.id }} .c-h-lvl2-icon {
      /* position: absolute;
      right: 1.5em;
      top: 50%;
      transform: translateY(-50%); */
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-h-lvl2-icon svg {
      width: 1em;
      /* color: var(--header-white); */
    }

    #{{ section.id }} .c-h-button {
      display: flex;
      align-items: center;
      width: 100%;
      justify-content: flex-start;
      border: none;
      border-radius: 0em;
      background-color: var(--header-button);
      padding: 1em 2em;
      color: var(--header-white);
    }

    #{{ section.id }} .c-h-button svg {
      transform: rotate(180deg);
      margin-right: 0.5em;
      width: 1em;
    }

    #{{ section.id }} .c-h-lvl2-link-div {
      display: flex;
      flex-direction: column;
    }

    #{{ section.id }} .c-h-lvl2-page,
    #{{ section.id }} .c-h-lvl3-page {
      /*position: absolute;
      top: 0em;
      left: 0em;*/
      /*height: 80vh;*/
      width: 100%;
      overflow: auto;
      z-index: 1;
      /* padding-left: 2em; */
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      /* gap: 0.5em; */
      background-color: {{ section.settings.mobile_drawer_bg_color }};
    }

    #{{ section.id }} .c-h-lvl3-page {
      z-index: 2;
    }

    #{{ section.id }} .c-h-menu-actions {
      display: flex;
      /*flex-direction: column;*/
      justify-content: flex-start;
      align-items: flex-start;
      padding: 0em 1.5em 0em 1.5em;
      gap: 1em;
    }

    #{{ section.id }} .c-h-mobile-buttons {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      margin-top: 0em;
      padding: 1.5em 1.5em 0em 1.5em;
      gap: 0.5em;
      {% if showMobileCta == false %}
        display: none;
      {% endif %}
    }

    #{{ section.id }} .c-h-mobile-button {
      width: 100%;
      text-align: center;
    }

    #{{ section.id }} #c-h-drawer-overlay {
      display: block !important;
    }
  /*#endregion*/

  /* nav */
  /*#region*/
    #{{ section.id }} .c-h-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75em;
    }

    #{{ section.id }} .c-h-nav-lvl1-div {
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1em;
    }

    #{{ section.id }} .c-h-nav-lvl2-details,
    #{{ section.id }} .c-h-nav-lvl2-details summary {
      height: 100%;
      box-sizing: border-box;
    }

    #{{ section.id }} .c-h-nav-lvl2-summary {
      display: flex;
      align-items: center;
      gap: 0.2em;
    }

    #{{ section.id }} .c-h-nav-lvl2-summary > span {
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--header-border);
      margin-top: 2px;
    }

    #{{ section.id }} .c-h-nav-lvl2-details {
      position: relative;
    }

    #{{ section.id }} .c-h-nav-lvl1-link {
      color: var(--header-border);
      height: auto;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: 0.2s ease;
      cursor: pointer;
      text-align: center;
      line-height: 1.2em;
    }

    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child,
    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child .c-h-nav-lvl1-link,
    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child .c-h-nav-lvl2-icon svg {
      color: var(--header-white);
      font-weight: 600;
    }

    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child:hover,
    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child:hover .c-h-nav-lvl1-link,
    #{{ section.id }} .c-h-nav-lvl1-div > *:first-child:hover .c-h-nav-lvl2-icon svg {
      color: var(--brand-primary);
    }

    #{{ section.id }} .c-h-nav-lvl1-link:hover,
    #{{ section.id }} .c-h-nav-lvl2-details[open] .c-h-nav-lvl1-link,
    #{{ section.id }} .c-h-nav-lvl2-details[open] .c-h-nav-lvl2-icon svg {
      color: var(--header-white);
    }

    #{{ section.id }} .c-h-nav-lvl2-details .c-h-nav-lvl2-icon svg {
      transition: 0.2s ease;
      width: 0.7em;
    }

    #{{ section.id }} .c-h-nav-lvl2-details[open] .c-h-nav-lvl2-icon svg {
      transform: rotate(180deg);
    }

    #{{ section.id }} .c-h-nav-lvl2-div {
      max-width: 100vw;
      width: max-content;
      padding: 0em;
      background-color: var(--header-bg-black);
      border: 1px solid var(--header-border2);
      position: absolute;
      top: 80%;
      left: -100%;
      z-index: 1;
      cursor: default;
      border-radius: 0em;
    }

    #{{ section.id }} .c-h-nav-lvl2-grid {
      display: flex;
      justify-content: center;
      /* flex-direction: column; */
      gap: 0em;
    }

    #{{ section.id }} .c-h-nav-lvl2-item {
      width: 11em;
      padding: 0.75em;
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-h-lvl2-page .c-h-nav-lvl2-item {
      width: auto;
    }

    #{{ section.id }} .c-h-nav-lvl2-item:hover {
      background-color: var(--brand-primary);
    }

