      min-width: 1em;
      color: var(--brand-primary);
    }

    #{{ section.id }} .c-h-nav-lvl3-wrapper {
      display: flex;
      flex-direction: column;
      min-width: 10%;
      align-items: flex-start;
    }

    #{{ section.id }} .c-h-nav-lvl3-div {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0em;
    }

