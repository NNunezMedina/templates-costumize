      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
      position: relative;
    }

    #{{ section.id }} .c-h-nav-lvl2-image-div img {
      max-height: 15em;
    }

    #{{ section.id }} .c-h-nav-lvl2-title {
      color: var(--header-white);
      text-transform: uppercase;
      font-weight: 700;
      margin-top: 0.35em;
      margin-bottom: 0.35em;
    }

    #{{ section.id }} .c-h-nav-lvl2-title:hover {
    }

