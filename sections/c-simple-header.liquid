<style>
  {% if section.settings.sticky_header == true %}
    .shopify-section.c-sh-section {
      position: sticky;
      top: 0px;
      /* position: fixed;
      top: 0px;
      left: 0px;
      width: 100%; */
      z-index: 2;
    }
  {% endif %}

  {{ section.settings.custom_styles }}

  #{{ section.id }} {
    font-size: 16px;
    border-bottom: 1px solid rgba(0,0,0,0.1);
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
    {{ section.settings.section_custom_css }}
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-sh-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1em;
  }

  #{{ section.id }} .c-sh-wrapper img {
    width: {{ section.settings.image_width }}em;
  }

  #{{ section.id }} .c-sh-wrapper .c-button {
    font-size: 1em;
    padding: 0.5em 1em;
  }

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-sh-wrapper">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
      {% endif %}
      {%- if section.settings.button_text != empty -%}
        <a class="c-button {{ section.settings.button_style }}" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
      {%- endif -%}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "C Simple Header",
    "class": "c-sh-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky header",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_width",
        "label": "Image width",
        "min": 1,
        "max": 25,
        "step": 0.5,
        "default": 3,
        "unit": "rem"
      },
      {
        "type": "liquid",
        "id": "custom_styles",
        "label": "Custom styles"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Buy Now"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "button_style",
        "label": "Button style",
        "default": "c-b1"
      },
      {
        "type": "header",
        "content": "Section Colors"
      },
      {
        "type": "text",
        "id": "bg_color",
        "label": "Background color",
        "default": "rgba(255,255,255,0.25)"
      },
      {
        "type": "text",
        "id": "section_custom_css",
        "label": "Section Custom CSS",
        "default": "backdrop-filter: blur(3px);"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Section Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 4,
        "step": 0.1,
        "default": 1,
        "unit": "rem"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 4,
        "step": 0.1,
        "default": 1,
        "unit": "rem"
      }
    ],
    "presets": [
      {
        "name": "C Simple Header"
      }
    ]
  }
{% endschema %}