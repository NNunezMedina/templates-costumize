<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} h2 {
    color: {{ section.settings.accent_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-cc-grid-wrap {
    overflow: auto;
    {% if section.settings.use_grid == true %}
      display: grid;
      grid-template-columns: 0.5fr 1fr;
      gap: 4em;
    {% endif %}
  }

  #{{ section.id }} .c-cc-grid {
    display: flex;
    flex-direction: column;
    /* gap: 1px;
    padding: 1px; */
    min-width: 600px;
    /* background-color: {{ section.settings.text_color }}; */
  }

  #{{ section.id }} .c-cc-grid-left {
    display: flex;
    justify-content: flex-start;
    align-items: center;
  }

  #{{ section.id }} .c-cc-grid-left-inner {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-direction: column;
    gap: 1em;
  }

  #{{ section.id }} .c-cc-grid > *:nth-child(2) > *:first-child {
    border-radius: 1em 0em 0em 0em;
  }

  #{{ section.id }} .c-cc-grid > *:nth-child(2) > *:last-child {
    border-radius: 0em 1em 0em 0em;
  }

  #{{ section.id }} .c-cc-grid > *:last-child > *:first-child {
    border-radius: 0em 0em 0em 1em;
  }

  #{{ section.id }} .c-cc-grid > *:last-child > *:last-child {
    border-radius: 0em 0em 1em 0em;
  }

  #{{ section.id }} .c-cc-grid-row {
    grid-template-columns:{% for i in (1..section.settings.columns) %} 1fr{% endfor %};
    /* gap: 1px; */
    display: grid;
    border-bottom: 2px solid {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-cc-grid-row:empty {
    display: none;
  }

  #{{ section.id }} .c-cc-grid-row.c-first-row {
    border-width: 5px;
  }

  #{{ section.id }} .c-cc-grid-row.c-first-row .c-cc-grid-cell:not(.c-col2) {
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-cc-grid-row.c-first-row .c-cc-grid-cell.c-col2 {
    border-radius: 1em 1em 0em 0em;
  }

  #{{ section.id }} .c-cc-grid-row.c-first-row img {
    display: none;
  }

  #{{ section.id }} .c-cc-grid-cell {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 0.5em;
    padding: 1em;
    background-color: #f1f1f1;
  }

  #{{ section.id }} .c-cc-grid-cell.c-col2 {
    background-color: {{ section.settings.active_bg_color }};
  }

  #{{ section.id }} .c-cc-grid-cell.c-col2 > * {
    /* color: #fff; */
  }

  #{{ section.id }} .c-cc-grid-cell img {
    width: 1.25em;
    object-fit: contain;
  }

  #{{ section.id }} .c-cc-grid-cell.c-col2 img {
    width: 2.5em;
  }

  @media (max-width: {{ settings.c_breakpoint1 }}px) {
    {% if section.settings.use_grid == true %}
      #{{ section.id }} .c-cc-grid-wrap {
        grid-template-columns: 1fr;
        gap: 2em;
      }
    {% endif %}
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2>{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-cc-grid-wrap">
      {% if section.settings.use_grid == true %}
        <div class="c-cc-grid-left">
          <div class="c-cc-grid-left-inner">
            {%- if section.settings.subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.subheading }}</p>{%- endif -%}
            {%- if section.settings.heading != empty -%}<h2>{{ section.settings.heading }}</h2>{%- endif -%}
            {%- if section.settings.paragraph != empty -%}<div class="c-t-80">{{ section.settings.paragraph }}</div>{%- endif -%}
            {%- if section.settings.button_text != empty -%}
              <div class="c-buttons-div">
                <a class="c-button {{ section.settings.button_style }}" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
              </div>
            {%- endif -%}
          </div>
        </div>
      {% endif %}
      <div class="c-cc-grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'Item' -%}
              <div class="c-cc-grid-row {% if forloop.first %}c-first-row{% endif %}" {{ block.shopify_attributes }}>
                {%- if block.settings.row_heading != empty -%}
                  <p class="c-cc-grid-cell c-col1">{{ block.settings.row_heading }}</p>
                {%- endif -%}
                {%- if block.settings.use_column1 == true -%}
                  <div class="c-cc-grid-cell c-col2">
                    <p>{{ block.settings.column1_heading }}</p>
                    <div>{{ block.settings.column1_paragraph }}</div>
                    {% if section.settings.use_true_false_icon == true %}
                      {% if block.settings.column1_true == true %}
                        {% if section.settings.icon_true_image %}
                          {{ section.settings.icon_true_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% else %}
                        {% if section.settings.icon_false_image %}
                          {{ section.settings.icon_false_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% endif %}
                    {% endif %}
                  </div>
                {%- endif -%}
                {%- if block.settings.use_column2 == true -%}
                  <div class="c-cc-grid-cell c-col3">
                    <p>{{ block.settings.column2_heading }}</p>
                    <div>{{ block.settings.column2_paragraph }}</div>
                    {% if section.settings.use_true_false_icon == true %}
                      {% if block.settings.column2_true == true %}
                        {% if section.settings.icon_true_image %}
                          {{ section.settings.icon_true_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% else %}
                        {% if section.settings.icon_false_image %}
                          {{ section.settings.icon_false_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% endif %}
                    {% endif %}
                  </div>
                {%- endif -%}
                {%- if block.settings.use_column3 == true -%}
                  <div class="c-cc-grid-cell c-col4">
                    <p>{{ block.settings.column3_heading }}</p>
                    <div>{{ block.settings.column3_paragraph }}</div>
                    {% if section.settings.use_true_false_icon == true %}
                      {% if block.settings.column3_true == true %}
                        {% if section.settings.icon_true_image %}
                          {{ section.settings.icon_true_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% else %}
                        {% if section.settings.icon_false_image %}
                          {{ section.settings.icon_false_image | image_url: width: 750 | image_tag: loading: 'lazy', height: 'auto' }}
                        {% endif %}
                      {% endif %}
                    {% endif %}
                  </div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>


