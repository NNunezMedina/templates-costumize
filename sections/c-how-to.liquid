<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-ht-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4em;
  }

  #{{ section.id }} .c-ht-grid-left-inner {
    position: sticky;
    top: var(--sticky-top);
  }

  #{{ section.id }} .c-ht-grid-left-inner,
  #{{ section.id }} .c-buttons-div {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 1em;
  }

  #{{ section.id }} .c-ht-grid-left-inner video {
    width: 100%;
  }

  #{{ section.id }} .c-ht-grid-right {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    gap: 3em;
  }

  #{{ section.id }} .c-ht-item {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 2em;
  }

  #{{ section.id }} .c-ht-item-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 0.5em;
  }

  #{{ section.id }} .c-ht-item-left img {
    min-width: 3em;
  }

  #{{ section.id }} .c-ht-item-left svg {
    color: var(--brand-primary);
    width: 3em;
    min-width: 3em;
  }

  #{{ section.id }} .c-ht-item-line {
    display: block !important;
    width: 1px;
    height: 100%;
    background-color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-ht-item-right {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    gap: 0.75em;
  }

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
    #{{ section.id }} .c-ht-grid {
      grid-template-columns: 1fr;
      gap: 2em;
    }

    #{{ section.id }} .c-ht-item {
      gap: 1em;
    }

    #{{ section.id }} .c-ht-item-right h3 {
      font-size: 1.1em;
    }

    #{{ section.id }} .c-ht-paragraph {
      font-size: 0.9em;
    }
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2>{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-ht-grid">
      <div class="c-ht-grid-left">
        <div class="c-ht-grid-left-inner">
          {%- if section.settings.subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.subheading }}</p>{%- endif -%}
          {%- if section.settings.heading != empty -%}<h2>{{ section.settings.heading }}</h2>{%- endif -%}
          {%- if section.settings.paragraph != empty -%}<div class="c-t-80">{{ section.settings.paragraph }}</div>{%- endif -%}
          {% if section.settings.video %}
            {% assign myPoster = section.settings.video.preview_image | image_url %}
            {{ section.settings.video | media_tag: autoplay: false, loop: true, muted: true, controls: true, poster: myPoster }}
          {% endif %}
          {%- if section.settings.button_text != empty -%}
            <div class="c-buttons-div">
              <a class="c-button c-b1" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
            </div>
          {%- endif -%}
        </div>
      </div>
      <div class="c-ht-grid-right">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'Item' %}
              <div class="c-ht-item" {{ block.shopify_attributes }}>
                <div class="c-ht-item-left">
                  {% if block.settings.block_icon %}
                    {{ block.settings.block_icon | image_url: width: 120 | image_tag: loading: 'lazy', height: 'auto' }}
                  {% endif %}
                  <span>{{ block.settings.svg_code }}</span>
                  <div class="c-ht-item-line"></div>
                </div>
                <div class="c-ht-item-right">
                  <h3>{{ block.settings.block_heading }}</h3>
                  <div class="c-ht-paragraph">{{ block.settings.block_paragraph }}</div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


