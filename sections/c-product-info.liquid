  /*#region*/
    #{{ section.id }} .c-pi-atc-div {
      display: flex;
      margin: 0em 0em 1em 0em;
      gap: 0.5em;
      flex-direction: column;
      align-items: center;
      text-align: center; 
    }

    #{{ section.id }} .c-pi-atc {
      width: 100%;
