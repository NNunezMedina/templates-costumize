    document.querySelector("#{{ section.id }} .c-pi-modal").setAttribute("open", "false");
  });

  document.querySelector("#{{ section.id }} .c-pi-modal").addEventListener("click", () => {
    document.querySelector("#{{ section.id }} .c-pi-modal").setAttribute("open", "false");
  });

  document.querySelector("#{{ section.id }} .c-pi-modal").querySelector(".c-pi-modal-slider").addEventListener("click", (e) => {
    e.preventDefault();
    e.stopPropagation();
    e.stopImmediatePropagation();
    return false;
  });

  document.querySelectorAll("#{{ section.id }} .c-pi-main-slider .swiper-slide img").forEach(image => {
