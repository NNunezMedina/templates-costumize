    #{{ section.id }} .c-pi-main-slider {
      width: 100%;
      margin-bottom: 1em;
    }

    #{{ section.id }} .c-pi-fullscreen {
      position: absolute;
      top: 0.5em;
      right: 0.5em;
      z-index: 2;
      cursor: pointer;
      display: flex;
      background-color: rgba(255,255,255,0.5);
      border-radius: 1em;
      transition: 0.2s ease;
      padding: 0.25em;
      align-items: center;
      justify-content: center;
      aspect-ratio: 1/1;
    }

    #{{ section.id }} .c-pi-fullscreen:hover {
      background-color: rgba(255,255,255,1);
    }

    #{{ section.id }} .c-pi-fullscreen svg {
      width: 1.5em;
    }

    #{{ section.id }} .c-pi-main-slider .swiper-wrapper {
      align-items: center;
    }

    #{{ section.id }} .c-pi-main-slider .swiper-slide img {
      border-radius: 0em;
      object-fit: unset;
      width: 100%;
      cursor: zoom-in;
      border: 1px solid rgba(0,0,0,0.1);
    }

    #{{ section.id }} .c-pi-main-slider .swiper-arrow {
      background-color: rgba(0, 0, 0, 0.5);
      color: #fff;
      width: 2.5em;
      height: 2.5em;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 4px;
      aspect-ratio: 1/1;
      transition: 0.2s ease;
      opacity: 1;
    }

    #{{ section.id }} .c-pi-main-slider .swiper-arrow:hover {
      background-color: rgba(0, 0, 0, 1);
    }

    #{{ section.id }} .c-pi-main-slider .swiper-arrow::after {
      font-size: 0.8em;
    }

    #{{ section.id }} .c-pi-main-slider .swiper-arrow.swiper-button-prev {
      left: 8px;
    }

    #{{ section.id }} .c-pi-main-slider .swiper-arrow.swiper-button-next {
      right: 8px;
    }

    #{{ section.id }} .swiper-horizontal>.swiper-pagination-bullets,
    #{{ section.id }} .swiper-pagination-bullets.swiper-pagination-horizontal {
      bottom: 0px;
    }

    #{{ section.id }} .swiper-pagination-bullet {
      width: 20px;
      height: 5px;
      background: rgba(0,0,0,.4);
      border: 1px solid rgba(255, 255, 255, 0.5);
      margin: 0 5px;
      cursor: pointer;
      border-radius: 0em;
      opacity: 1;
    }

    #{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
      background: var(--brand-primary);
      border-color: rgba(0, 0, 0, 1);
    }

    #{{ section.id }} .c-pi-thumbs-slider {
      width: 100%;
    }

    #{{ section.id }} .c-pi-thumbs-slider .swiper-wrapper {
    }

    #{{ section.id }} .c-pi-thumbs-slider .swiper-slide {
      border: 2px solid #ddd;/* */
      cursor: pointer;
      border-radius: 0em;
      opacity: 0.8;
      height: auto !important;
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-pi-thumbs-slider .swiper-slide img {
      border-radius: 0em;
    }

    #{{ section.id }} .c-pi-thumbs-slider .swiper-slide:hover {
      opacity: 1;
    }

    #{{ section.id }} .c-pi-thumbs-slider .swiper-slide.swiper-slide-thumb-active {
      border-color: var(--brand-primary);
