  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.section_top_text_alignment }};
  }




   /* modal */
  /*#region*/
    #{{ section.id }} .c-pi-modal {
      background-color: rgba(0, 0, 0, 0.8);
      position: fixed;
      top: 0em;
      left: 0em;
      width: 100%;
      height: 100%;
      /* z-index: 4; */
      z-index: var(--zindex-1);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    #{{ section.id }} .c-pi-modal[open="false"] {
      display: none;
    }

    #{{ section.id }} .c-mt-10 {
      margin-top: 10px;
    }


    #{{ section.id }} .c-pi-modal[open="true"] {
      display: flex;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-slider {
      width: 80%;
      height: 100%;
      background-color: rgba(0,0,0,1);
      border: 1px solid #fff;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-slider .swiper-slide img {
      max-height: 100%;
      height: 100%;
      width: auto;
      cursor: zoom-in;/**/
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-slider .swiper-arrow {
      background-color: rgba(255, 255, 255, 1);
      color: #000;
      border: 1px solid rgba(0, 0, 0, 0.5);
      width: 3em;
      height: 3em;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 100%;
      aspect-ratio: 1/1;
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-slider .swiper-arrow:hover {
      border-color: rgba(0, 0, 0, 1);
      background-color: rgba(255, 255, 255, 1);
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-slider .swiper-arrow::after {
      font-size: 1em;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-zoom {
      position: absolute;
      top: 1em;
      left: 50%;
      transform: translateX(-50%);
      z-index: 2;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.5em;
      cursor: pointer;
      background-color: #000;
      color: #fff;
      padding: 0.4em 0.75em;
      border-radius: 999px;
      font-size: 0.8em;
      line-height: normal;
      transition: 0.2s ease;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-zoom p {
      color: #fff;
    }

    #{{ section.id }} .c-pi-modal .c-pi-modal-zoom:hover {
      opacity: 1 !important;
    }

    #{{ section.id }} .c-pi-modal-close {
      position: absolute;
      top: 7em;
      right: 3em;
      cursor: pointer;
      z-index: 2;
      background-color: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1em;
      border-radius: 100%;
    }

    #{{ section.id }} .c-pi-modal-close svg {
      width: 2em;
      color: #fff;
    }
  /*#endregion*/

  #{{ section.id }} .c-pi-wrapper {
    display: flex;
    gap: 3em;
  }

  /* left */
  /*#region*/
    #{{ section.id }} .c-pi-grid-left-wrapper {
      width: calc(50% - 1.5em);
    }

    #{{ section.id }} .c-pi-grid-left {
      position: sticky;
      top: 6em;
      /*display: grid;
      grid-template-columns: 1fr 1fr;
