<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.text_alignment }};
  }

  #{{ section.id }} .c-hc-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4em;
  }

  #{{ section.id }} .c-hc-grid-left-inner {
    position: sticky;
    top: 5em;
  }

  #{{ section.id }} .c-hc-grid-left-inner,
  #{{ section.id }} .c-buttons-div {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 1em;
  }

  #{{ section.id }} .c-hc-grid-left-inner img,
  #{{ section.id }} .c-hc-grid-left-inner video {
    width: 100%;
  }

  #{{ section.id }} .c-hc-grid-right {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    gap: 2em;
  }

  #{{ section.id }} .c-hc-item {
    width: 100%;
    background-color: {{ section.settings.card_bg_color }};
    padding: 2em;
    {% if section.settings.blocks_direction == "vertical" %}
      flex-direction: column;
      gap: 0.75em;
    {% else %}
      gap: 1.5em;
    {% endif %}
  }

  #{{ section.id }} .c-hc-item,
  #{{ section.id }} .c-hc-item-right {
    display: flex;
    justify-content: center;
    {% if section.settings.blocks_alignment == "left" %}
      align-items: flex-start;
      text-align: left;
    {% elsif section.settings.blocks_alignment == "center" %}
      align-items: center;
      text-align: center;
    {% else %}
      align-items: flex-end;
      text-align: right;
    {% endif %}
  }

  #{{ section.id }} .c-hc-item-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 0.5em;
  }

  #{{ section.id }} .c-hc-item-left img,
  #{{ section.id }} .c-hc-item-left svg {
    width: {{ section.settings.icon_width }}em;
    min-width: {{ section.settings.icon_width }}em;
  }

  #{{ section.id }} .c-hc-item-left svg,
  #{{ section.id }} .c-hc-item-heading,
  #{{ section.id }} h2 {
    color: {{ section.settings.accent_color }};
  }

  #{{ section.id }} .c-hc-item-right {
    flex-direction: column;
    gap: 0.75em;
  }

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
    #{{ section.id }} .c-hc-grid {
      grid-template-columns: 1fr;
      gap: 2em;
    }

    #{{ section.id }} .c-hc-item {
      gap: 1em;
      padding: 1em;
    }

    #{{ section.id }} .c-hc-item-right {
      gap: 1em;
    }

    #{{ section.id }} .c-hc-item-right h3 {
      font-size: 1.1em;
    }

    #{{ section.id }} .c-hc-paragraph {
      font-size: 0.9em;
    }
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2>{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-hc-grid">
      <div class="c-hc-grid-left">
        <div class="c-hc-grid-left-inner">
          {%- if section.settings.subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.subheading }}</p>{%- endif -%}
          {%- if section.settings.heading != empty -%}<h2>{{ section.settings.heading }}</h2>{%- endif -%}
          {%- if section.settings.paragraph != empty -%}<div class="c-t-80">{{ section.settings.paragraph }}</div>{%- endif -%}
          {%- if section.settings.button_text != empty -%}
            <div class="c-buttons-div">
              <a class="c-button {{ section.settings.button_style }}" href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
            </div>
          {%- endif -%}
          {% if section.settings.image %}
            {{ section.settings.image | image_url: width: 1250 | image_tag: loading: 'lazy', height: 'auto' }}
          {% endif %}
          {% if section.settings.video %}
            {{ section.settings.video | media_tag: autoplay: true, loop: true, muted: true, controls: true }}
          {% endif %}
        </div>
      </div>
      <div class="c-hc-grid-right">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'Item' %}
              <div class="c-hc-item" {{ block.shopify_attributes }}>
                <div class="c-hc-item-left">
                  {% if block.settings.block_icon %}
                    {{ block.settings.block_icon | image_url: width: 120 | image_tag: loading: 'lazy', height: 'auto' }}
                  {% endif %}
                  <span>{{ block.settings.svg_code }}</span>
                </div>
                <div class="c-hc-item-right">
                  {%- if block.settings.block_subheading != empty -%}<p>{{ block.settings.block_subheading }}</p>{%- endif -%}
                  <h3 class="c-hc-item-heading">{{ block.settings.block_heading }}</h3>
                  <div class="c-hc-paragraph">{{ block.settings.block_paragraph }}</div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


