<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
  }

  #{{ section.id }} .c-section-top-subheading,
  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .c-section-top {
    align-items: {{ section.settings.section_top_alignment }};
    text-align: {{ section.settings.section_top_text_alignment }};
  }

  #{{ section.id }} .c-ps-wrapper {
    display: flex;
    flex-direction: column;
    gap: 2em;
  }

  #{{ section.id }} .c-ps-top {
    display: flex;
    justify-content: space-between;
  }

  #{{ section.id }} .c-ps-heading {
    color: {{ section.settings.heading_color }};
  }

  #{{ section.id }} .c-ps-buttons {
    display: block;
  }

  #{{ section.id }} .c-ps-buttons > a {
    display: inline-flex;
    margin: 0em .15em .4em 0em;
  }

  #{{ section.id }} .c-ps-grid {
    column-count: 2;
    font-size: 14px;
    gap: 2.5em;
  }

  #{{ section.id }} .c-ps-grid-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5em 0em;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    gap: 1em;
  }

  #{{ section.id }} .c-ps-grid-item *:last-child {
    text-align: right;
  }

  #{{ section.id }} .c-ps-row-heading {
    font-weight: 600;
  }

  #{{ section.id }} .c-ps-bottom {
    margin-top: 1em;
  }

  #{{ section.id }} .c-ps-bottom img {
    width: 2em;
  }

  @media (max-width: {{ settings.c_breakpoint3 }}px) {
    #{{ section.id }} .c-ps-top {
      flex-direction: column;
      align-items: center;
      gap: 1.5em;
    }

    #{{ section.id }} .c-ps-buttons {
      display: flex;
      flex-direction: column;
    }

    #{{ section.id }} .c-ps-grid {
      column-count: 1;
    }
  }
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-section-top">
      {%- if section.settings.section_top_subheading != empty -%}<p class="c-section-top-subheading">{{ section.settings.section_top_subheading }}</p>{%- endif -%}
      {%- if section.settings.section_top_heading != empty -%}<h2>{{ section.settings.section_top_heading }}</h2>{%- endif -%}
      {%- if section.settings.section_top_paragraph != empty -%}<div class="c-t-80">{{ section.settings.section_top_paragraph }}</div>{%- endif -%}
    </div>
    <div class="c-ps-wrapper">
      <div class="c-ps-top">
        {%- if section.settings.heading != empty -%}<h2 class="c-ps-heading">{{ section.settings.heading }}</h2>{%- endif -%}
        <div class="c-ps-buttons">
          <a href="{{ section.settings.pdf_link1 }}" class="c-button c-b1">Owners Manual</a>
          <a href="{{ section.settings.pdf_link2 }}" class="c-button c-b1">Quick Start Guide</a>
          <a href="{{ section.settings.faqs_link }}" target="_blank" class="c-button c-b1">FAQs</a>
        </div>
      </div>
      <div class="c-ps-grid">
        {% for item in product.metafields.custom.dimensions_specs.value %}
          {% assign mySplit = item | split: ':' %}
          <div class="c-ps-grid-item">
            {% for side in mySplit %}
              <span class="{% if forloop.first %}c-ps-row-heading{% endif %}">{{ side }}{% if forloop.first %}:{% endif %}</span>
            {% endfor %}
          </div>
        {% endfor %}
      </div>
      <div class="c-ps-bottom">
        {% if section.settings.image %}
          {{ section.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', height: 'auto' }}
        {% endif %}
        <span><strong>{{ section.settings.whats_in_the_box_heading }}</strong> {{ section.settings.whats_in_the_box }}</span>
      </div>
    </div>
  </div>
</section>


